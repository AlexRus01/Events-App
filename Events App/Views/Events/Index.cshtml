@model Events_App.Models.Event

<style>

    body {
        background-image: url("https://rare-gallery.com/uploads/posts/580026-blur-community.jpg");
    }
</style>

<body>

    <head>


        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" />

        <!-- Bootstrap Font Icon CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    </head>
    @{
        ViewBag.Title = "Index";
    }

    <h2 style="color: white">Afisare Evenimente</h2>
    <br />
    @if (ViewBag.Message != null)
    {
        <h2 class="alert-secondary p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
    }

    <br />
    <br />
    <br />
    <br />

    @foreach (Events_App.Models.Event ev in ViewBag.Events)
    {
        <div class="card-body">

            <h3 class="alert alert-dark py-3 px-3 rounded-2 text-center ">@ev.Title</h3>

            <div class="card-text text-center" style="color: white">  @ev.Description</div>
            <div class="d-flex flex-row justify-content-between p-3 ">


                <span style="color: white"><i class="bi bi-calendar-date" style="color: white"> </i>  @ev.Date</span>
                <span style="color: white"><i class="bi bi-geo-alt-fill" style="color: white"> </i>  @ev.Location</span>
                <a class="btn btn-secondary bi bi-pencil-square" href="/Events/Edit/@ev.EventId">Editeaza eveniment</a>
                <a class="btn btn-secondary" href="/Events/Show/@ev.EventId">Afisare event</a>
            </div>


        </div>


        <br />
        <br />
    }

</body>
